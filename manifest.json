{
    "manifest_version": 2,
    "name": "Detector Master 2000",
    "version": "1.0",
    
    "applications": {
        "gecko": {
            "id": "detector_master_2000@mozilla.org"
        }
    },

    "permissions": [
        "webRequest",
        "notifications",
        "tabs",
        "activeTab",
        "storage",
        "cookies",
        "webNavigation",
        "<all_urls>"
    ],

    "background": {
        "scripts": ["scripts/background.js"]
    },

    "browser_action": {
        "default_icon":  "icons/magnifier.png",
        "default_title": "Detector Master 2000",
        "default_popup": "popup/detectorMaster2000.html"
    }
}